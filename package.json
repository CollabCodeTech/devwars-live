{
  "name": "devwars-editor",
  "version": "0.1.0",
  "description": "Text editor for DevWars",
  "main": "src/server/index.js",
  "author": "Kim Simonsen",
  "license": "MIT",
  "scripts": {
    "start": "node src/server/index.js",
    "build": "npm run build:client",
    "build:client": "webpack -p",
    "watch": "concurrently -kr \"npm run watch:client\" \"npm run watch:server\"",
    "watch:client": "webpack --watch",
    "watch:server": "onchange -i \"src/server/**/*\" -- node src/server/index.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.5",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "vue": "^2.4.2",
    "vue-loader": "^13.0.4",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "express": "^4.15.4",
    "monaco-editor": "^0.8.3",
    "socket.io": "^2.0.3"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
