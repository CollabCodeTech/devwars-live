{
    "name": "devwars-live",
    "version": "0.0.0",
    "description": "watch.devwars.tv portion of the DevWars site",
    "main": "src/server/index.js",
    "author": "Kim Simonsen",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/DevWars/devwars-live"
    },
    "scripts": {
        "start": "node src/server",
        "prebuild": "npm run lint",
        "build": "cross-env NODE_ENV=production webpack --mode production",
        "watch": "concurrently -kr \"npm run watch:client\" \"npm run watch:server\"",
        "watch:client": "webpack -w --mode development",
        "watch:server": "onchange -i \"src/(server|shared)/**/*\" -- node src/server",
        "lint": "eslint --ignore-path .gitignore --ext js,vue src"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.42",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.42",
        "@babel/polyfill": "^7.0.0-beta.42",
        "@babel/preset-env": "^7.0.0-beta.42",
        "autoprefixer": "^8.1.0",
        "babel-loader": "^8.0.0-beta.2",
        "concurrently": "^3.5.0",
        "copy-webpack-plugin": "^4.5.1",
        "cross-env": "^5.1.4",
        "css-loader": "^0.28.10",
        "eslint": "^4.18.2",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.9.0",
        "eslint-plugin-vue": "^4.3.0",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "lodash-es": "^4.17.7",
        "monaco-editor": "^0.11.1",
        "node-sass": "^4.8.2",
        "onchange": "^3.2.1",
        "sass-loader": "^6.0.7",
        "vue": "^2.5.16",
        "vue-loader": "^14.2.1",
        "vue-material-design-icons": "^1.2.1",
        "vue-router": "3.0.1",
        "vue-template-compiler": "^2.5.16",
        "vuex": "3.0.1",
        "webpack": "^4.1.1",
        "webpack-cli": "^2.0.12"
    },
    "dependencies": {
        "ajv": "^6.2.1",
        "axios": "^0.18.0",
        "config": "^1.30.0",
        "cookie": "^0.3.1",
        "dotenv": "^5.0.1",
        "express": "^4.16.3",
        "firebase-admin": "^5.11.0",
        "helmet": "^3.12.0",
        "lodash": "^4.17.5",
        "socket.io": "^2.0.3"
    },
    "browserslist": [
        "chrome >= 61",
        "edge >= 16",
        "firefox >= 56",
        "safari >= 11"
    ],
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    }
}
