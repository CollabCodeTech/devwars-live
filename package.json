{
    "name": "devwars-live",
    "version": "0.0.0",
    "description": "watch.devwars.tv portion of the DevWars site",
    "main": "src/server/index.js",
    "author": "Kim Simonsen",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/DevWars/devwars-live"
    },
    "scripts": {
        "start": "node src/server",
        "prebuild": "npm run lint",
        "build": "cross-env NODE_ENV=production webpack --mode production",
        "watch": "concurrently -kr \"npm run watch:client\" \"npm run watch:server\"",
        "watch:client": "webpack -w --mode development",
        "watch:server": "onchange -i \"src/(server|shared)/**/*\" -- node src/server",
        "lint": "eslint --ignore-path .gitignore --ext js,vue src"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-rc.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
        "@babel/polyfill": "^7.0.0-rc.1",
        "@babel/preset-env": "^7.0.0-rc.1",
        "autoprefixer": "^9.1.3",
        "babel-loader": "^8.0.0-beta.4",
        "babel-plugin-lodash": "^3.3.4",
        "concurrently": "^3.6.1",
        "copy-webpack-plugin": "^4.5.2",
        "cross-env": "^5.2.0",
        "css-loader": "^1.0.0",
        "cssnano": "^4.0.5",
        "eslint": "^5.4.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-vue": "^5.0.0-beta.3",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "mini-css-extract-plugin": "^0.4.2",
        "monaco-editor": "^0.14.3",
        "node-sass": "^4.9.3",
        "onchange": "^4.1.0",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^7.1.0",
        "vue": "^2.5.17",
        "vue-loader": "^15.4.0",
        "vue-material-design-icons": "^2.0.0",
        "vue-router": "3.0.1",
        "vue-template-compiler": "^2.5.17",
        "vuex": "3.0.1",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0"
    },
    "dependencies": {
        "ajv": "^6.5.3",
        "axios": "^0.18.0",
        "config": "^2.0.1",
        "cookie": "^0.3.1",
        "dotenv": "^6.0.0",
        "ejs": "^2.6.1",
        "express": "^4.16.3",
        "firebase-admin": "^6.0.0",
        "helmet": "^3.13.0",
        "lodash": "^4.17.10",
        "socket.io": "^2.1.1"
    },
    "browserslist": [
        "chrome >= 58",
        "edge >= 16",
        "firefox >= 52",
        "safari >= 11"
    ],
    "postcss": {
        "plugins": {
            "autoprefixer": true,
            "cssnano": true
        }
    }
}
